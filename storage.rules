rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return signedIn() && userDoc().role == 'admin';
    }

    // Public reads for product & hero images; writes admin-only.
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /hero/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}

