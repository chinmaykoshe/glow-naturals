rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function userDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return signedIn() && userDoc().role == 'admin';
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // Users
    match /users/{uid} {
      allow read: if isSelf(uid) || isAdmin();
      allow create: if isSelf(uid);
      // Users may update only their profile fields; admin can update anything.
      allow update: if isAdmin() || (isSelf(uid) &&
        request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'name',
          'addresses'
        ]));
      allow delete: if isAdmin();
    }

    // Products: public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Hero: public read, admin write
    match /hero/{heroId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Orders
    match /orders/{orderId} {
      allow read: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }
  }
}

